{% extends 'base.html.twig' %}

{% block title %}Empreses - Job Or Work{% endblock %}

{% block body %}
    <div class="container">
        <h2>LLISTA EMPRESAS</h2>

        <table class="table table-dark">
            <thead>
            <tr>
                <th class="text-center" scope="col">ID</th>
                <th class="text-center" scope="col">Tipus</th>
                <th class="text-center" scope="col">Logo</th>
                <th class="text-center" scope="col">Correu</th>
                <th class="text-center" scope="col">Nom</th>
                <th class="text-center" scope="col">Detalls</th>
            </tr>
            </thead>
            <tbody>
            {% for empresa in empresas %}
                <tr>
                    <td>{{ empresa.id }}</td>
                    <td>{{ empresa.tipus }}</td>
                    <td>{{ empresa.logo }}</td>
                    <td>{{ empresa.correu }}</td>
                    <td>{{ empresa.nom }}</td>
                    <td>
                        <button type="button" class="btn btn-primary"> Detall </button>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
